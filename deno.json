{
  "fmt": {

    "bracePosition": "sameLine",
    "nextControlFlowPosition": "sameLine",
    "operatorPosition": "nextLine",
    "proseWrap": "preserve",
    "singleBodyPosition": "sameLine",
    "useBraces": "whenNotSingleLine",

    "indentWidth": 2,
    "useTabs": false,
    "lineWidth": 100,
    "newLineKind": "lf",

    "semiColons": true,
    "singleQuote": false,
    "quoteProps": "asNeeded",
    "spaceAround": false,

    "include": ["denoprovider/**/*.ts", "webprovider/**/*.ts"],
    "exclude": ["**/node_modules/", "**/dist/", "**/build/", "webprovider/lib/proto/v1/*"]

  }
}
