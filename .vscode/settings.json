{
  // always want the code to look uniformly
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // use the typescript version from webprovider
  "typescript.tsdk": "webprovider/node_modules/typescript/lib",

  // enable deno only for specific path
  "deno.enablePaths": ["denoprovider/", "deno.json"],

  // avoid prettier for some filetypes
  "[go.work]": { "editor.defaultFormatter": "golang.go" },
  "[go]": { "editor.defaultFormatter": "golang.go" },
  "[proto]": { "editor.defaultFormatter": "bufbuild.vscode-buf" },
  "[rust]": { "editor.defaultFormatter": "rust-lang.rust-analyzer" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // add wasi-apps rust projects explicitly
  "rust-analyzer.linkedProjects": [
    "wasi-apps/argonload/Cargo.toml",
    "wasi-apps/fibonacci/Cargo.toml",
    "wasi-apps/gaussian_sleeper/Cargo.toml",
    "wasi-apps/helloworld/rust/Cargo.toml",
    "wasi-apps/travelling_salesman/Cargo.toml"
  ]
}
