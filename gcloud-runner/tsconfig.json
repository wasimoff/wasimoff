{

  "include": [ "main.ts", "src/**/*.ts" ],
  "exclude": [ "node_modules" ],

  "compilerOptions": {

    // compile modern es modules
    "target": "esnext",
    "module": "esnext",
    "lib": [ "esnext", "dom" ],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,

    // path aliases for shared code
    "rootDir": "../",
    "paths": {
      "@wasimoff/*": [ "../webprovider/lib/*" ]
    },

    // linting rules
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true

  },

}
